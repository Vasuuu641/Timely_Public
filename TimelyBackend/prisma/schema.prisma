generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // Your custom output path
}

datasource db {
  provider = "mysql" // <--- CHANGE THIS FROM "postgresql" TO "mysql"
  url      = env("DATABASE_URL")
}

// ... (existing generator and datasource blocks) ...

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  password         String // Store hashed passwords, NOT plain text!
  username         String            @unique
  fullname         String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  schedules        ScheduleEntry[]
  todos            Todo[]            @relation("UserTodos")
  notes            Note[]
  quizzes          Quiz[]
  DailyReview      DailyReview[]
  pomodoroSessions PomodoroSession[]
  studyGoals       StudyGoal[]
  featureUsage     FeatureUsage[]
}

model ScheduleEntry {
  id          String    @id @default(uuid())
  title       String
  notes       String?
  startTime   DateTime
  endTime     DateTime?
  topic       String?   @default("General")
  priority    String?   @default("Medium")
  status      String?   @default("ToDo")
  isDailyPlan Boolean   @default(false)
  isRecurring Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([topic])
}

enum TodoPriority {
  LOW
  MEDIUM
  HIGH
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  priority    TodoPriority  @default(MEDIUM)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation("UserTodos", fields: [userId], references: [id])
}

model DailyReview {
  id         Int      @id @default(autoincrement())
  date       DateTime
  reflection String
  rating     Int?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([date, userId])
}

model PomodoroSession {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  level             PomodoroLevel
  focusStart        DateTime // when the session began
  focusEnd          DateTime? // when the session ended
  breaks            Break[] // relation to the breaks taken
  postSessionBreak  PostSessionBreak?
  pointsEarned      Int               @default(0)
  isCompleted       Boolean           @default(false)
  totalBreakMinutes Int?              @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PomodoroLevel {
  EASY
  MEDIUM
  HARD
}

model Break {
  id        Int             @id @default(autoincrement())
  session   PomodoroSession @relation(fields: [sessionId], references: [id])
  sessionId Int

  startTime DateTime
  endTime   DateTime?

  createdAt DateTime @default(now())
}

model PostSessionBreak {
  id        Int             @id @default(autoincrement())
  session   PomodoroSession @relation(fields: [sessionId], references: [id])
  sessionId Int             @unique

  startTime DateTime
  endTime   DateTime?
}

model Note {
  id        String   @id @default(uuid())
  title     String?
  content   String   @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Quiz {
  id            String   @id @default(uuid())
  topic         String
  question      String?
  options       String
  correctAnswer String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum GoalType {
  NOTE
  TASK
  POMODORO
  STUDY_HOURS
}

model StudyGoal {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      GoalType
  target    Int // target number of tasks, points, notes, etc.
  notes     String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FeatureUsage {
  id         String   @id @default(uuid())
  userId     String
  feature    String
  usageCount Int      @default(0)
  lastUsed   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, feature])
}